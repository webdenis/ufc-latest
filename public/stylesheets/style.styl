mobile()
  @media (max-width: 1080px)
    {block}
body
	padding 20px 45px
	font-family Calibri
	background #000
	color #FFF
h2
	margin-top 40px
a
	color #FFF
	text-decoration none
a:hover
	color #CCC
	text-decoration underline
th
	padding 8px
	text-align left
td
	padding 2px 8px
	transition color 0.5s ease
td:first-child
	color #9b99c1
	padding-right 100px
.wiki
	margin-left 5px
.heading
	position absolute
	top 15px
	right 45px
.showAll
	margin-left 10px
	color #999
	cursor pointer
.getRecord
	cursor pointer
sup a
	font-weight bold
	cursor help
.fightResult
	text-align center
	color #eee !important
	padding-right 0 !important
	font-size: 0.8rem;
.hideResults .fightResult
	color #000 !important
	
+mobile()
	body
		padding 15px
	div p
		font-size 1.5rem
	table
		width 95%
	table td
		font-size 1.5rem
	.fightResult
		font-size 1rem