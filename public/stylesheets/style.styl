mobile()
  @media (max-width: 1080px)
    {block}
body
	padding 20px 45px
	font-family Calibri
	background #000
	color #FFF
a
	color #FFF
	text-decoration none
a:hover
	color #CCC
	text-decoration underline
th
	padding 8px
	text-align left
td
	padding 2px 8px
	transition color 0.5s ease
td:first-child
	color #9b99c1
	padding-right 100px
.wiki
	margin-left 5px
.heading
	position absolute
	top 15px
	right 45px
	text-align right
.heading h3 a
	cursor pointer
.showAll
	margin-left 10px
	color #999
	cursor pointer
.getRecord
	cursor pointer
sup a
	font-weight bold
	cursor help
.fightResult
	text-align center
	color #eee !important
	padding-right 0 !important
	font-size: 0.8rem;
.hideResults .fightResult
	color #000 !important

.hidden p > *:not(.donthide), .hidden > *:not(.donthide)
	display none
	
.hide
	display none
	
.padded
	padding-left 30px
	padding-bottom 20px
.paddedT
	padding-left 15px
.linet
	text-decoration line-through
	
+mobile()
	body
		padding 15px
	div p
		font-size 1.5rem
	table
		width 95%
	table td
		font-size 1.5rem
	.fightResult
		font-size 1.2rem
	h2:first-of-type
		margin-top 120px